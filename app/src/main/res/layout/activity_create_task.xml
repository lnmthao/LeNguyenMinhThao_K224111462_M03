<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".k224111462midterm.CreateTaskActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#F9F9F9">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_create_task"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp" />

        <EditText
            android:id="@+id/edtTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/title_task_title"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assign to Employee"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:padding="8dp"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btnSelectCustomers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_select_customer"
            android:backgroundTint="#FFB300"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp"
            android:padding="12dp"
            android:background="@drawable/rounded_button" />

        <Button
            android:id="@+id/btnCreateTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_create_task"
            android:textColor="#FFFFFF"
            android:padding="14dp"
            android:background="@drawable/rounded_button_green" />

    </LinearLayout>
</ScrollView>